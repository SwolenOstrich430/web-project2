<div class="login-form-container">
    <form class="login-form signup-form">
        <div class="header-container">
            <img id="logo" src="../img/logo.png" width="180" alt="Pillow Logo">
            <hr>
            <h5>Sign up to create an account.</h5>
        </div>
        <div class="input-container signup-input-container">
            <label for="firstName">First name</label>
            <input id="firstName" class="text-input" name="firstName" type="text">
            <label for="lastName">Last name</label>
            <input id="lastName" class="text-input" name="lastName" type="text">
            <label for="phone">Phone number</label>
            <input id="phone" class="text-input" name="phone" type="text">
            <label for="email">Email</label>
            <input id="email" class="text-input" name="email" type="text">
            <label for="type">Which most accurately describes you?</label>
            <select id="type" class="text-input" name="type">
                <option value="realtor">Realtor</option>
                <option value="seller">Home Owner/Seller</option>
                <option value="buyer">Buyer</option>
            </select>
            <label for="password">Password</label>
            <input class="text-input" name="password" type="text">
        </div>
        <input id="submit-button" type="submit" value="Submit">
        <div id="sign-up-container">
            <a href="/login">Already have an account?</a>
        </div>
    </form>
</div>
<script src="/js/signup.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js" type="text/javascript"></script>